
div.modal.animate__animated.animate__zoomIn#signin-modal
    div.modal-dialog.modal-lg.modal-dialog-centered
        div.modal-content
            //- div.modal-header
            //-     h5.modal-title Sign Up Form
            //-     button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
            
            div.modal-body.p-5
                div.row
                    div.col-md-6.d-flex.justify-content-center.align-items-center
                        img(src="images/signup.svg", alt="signup.svg" width="100%")
                    div.col-md-6
                        h1.mb-4.display-4(style="font-size:35px;") Login
                        form#login-form
                            div.form-group.mb-4
                                input.form-control.username(type="email" name="email" placeholder="Your Email")
                                span.username-error.text-danger
                            div.form-group.mb-4
                                input.form-control.password(type="password" name="password" placeholder="Your Password")
                                span.password-error.text-danger
                            div.form-group.mb-4
                                button.btn.btn-primary.login-btn(type="submit") Sign In
                                button.btn.btn-danger.before-send.d-none(disabled)
                                    span.spinner-grow.spinner-grow-sm
                                    span Processing
                            p New User ?
                                a#request-register-modal(href="#") Register  